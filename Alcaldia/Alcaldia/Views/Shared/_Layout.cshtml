<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/sweetalert2.css")
    @Styles.Render("~/Content/toastr.css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/bootstrap-4.3.2/bootstrap.css")
    @Styles.Render("~/Content/bootstrap-4.3.2/bootstrap.min.css")
</head>
<body>
    <div class="navbar  navbar-fixed-top" >
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/Content/Imagenes/alcaldia.png" style="width:150px; height:70px;image-rendering:optimizeQuality">
                @*@Html.ActionLink("Nombre de aplicación", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
            @*<div class="navbar navbar-default" style="background-color:#88DAEC">*@
                <ul class="nav navbar-nav" id="nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    @*<li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                    <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>*@
                    <li>@Html.ActionLink("Vacaciones","Index","Vacaciones")</li>
                    <li>@Html.ActionLink("Asistencia","Index","Asistencias")</li>
                    <li>@Html.ActionLink("Subsidio","Index","Subcidios")</li>
                    <li>@Html.ActionLink("Permisos","Index","Permisos")</li>
                    <li>@Html.ActionLink("Deducciones", "Index", "Deducciones")</li>
                    <li>@Html.ActionLink("Constancias", "Index", "Constancias")</li>
                    <li>@Html.ActionLink("Empleado", "Index","Empleadoes")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Direccion General de Infraestructura</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/sweetalert2.min.js")
    @Scripts.Render("~/Scripts/toastr.min.js")
    @*@Scripts.Render("~/Scripts/DatePickerReady.js")*@
    @RenderSection("scripts", required: false)
</body>
</html>
